<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="部落游戏"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header_game_pic"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@drawable/game_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_weight="1"
                android:ellipsize="end"
                android:id="@+id/tv_header_game_name"
                android:lines="1"
                android:text="决战朝歌"
                android:textColor="@color/main_black"
                android:textSize="@dimen/fonts_14" />

            <TextView
                android:id="@+id/tv_header_game_select"
                android:layout_width="72dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_fillet_login"
                android:gravity="center"
                android:text="@string/text_select"
                android:textColor="@color/main_black"
                android:textSize="@dimen/fonts_11" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_e6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_6"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:paddingTop="@dimen/padding_14"
        android:text="部落游戏"
        android:textColor="@color/second_color"
        android:textSize="@dimen/fonts_15" />
</LinearLayout>