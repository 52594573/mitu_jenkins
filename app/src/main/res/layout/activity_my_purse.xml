<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_history_keyword_bg"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <RelativeLayout
        android:id="@+id/rl_coin_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_dialog_radius"
        android:paddingLeft="20dp"
        android:paddingTop="28dp">

        <TextView
            android:id="@+id/tv_coin_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_purse_coin"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_my_purse_doubt"
            android:gravity="center_vertical"
            android:text="@string/text_coin_last"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_16" />

        <TextView
            android:id="@+id/tv_coin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"
            android:text="999"
            android:textColor="@color/main_black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_coin_value"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_coin_value"
            android:text="个"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_coin_transaction_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_coin_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/ic_my_purse_next"
            android:drawablePadding="5dp"
            android:text="@string/text_transaction_record"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/fonts_13" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_radish_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_dialog_radius"
        android:paddingLeft="20dp"
        android:paddingTop="28dp">

        <TextView
            android:id="@+id/tv_radish_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_purse_radish"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_my_purse_doubt"
            android:gravity="center_vertical"
            android:text="@string/text_radish_last"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_16" />

        <TextView
            android:id="@+id/tv_radish_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"
            android:text="999"
            android:textColor="@color/main_black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_radish_value"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_radish_value"
            android:text="个"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_radish_transaction_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_radish_value"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_my_purse_next"
            android:drawablePadding="5dp"
            android:layout_marginRight="20dp"
            android:text="@string/text_transaction_record"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/fonts_13" />
    </RelativeLayout>
</LinearLayout>