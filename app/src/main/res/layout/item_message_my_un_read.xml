<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/margin_16"
              android:layout_marginLeft="@dimen/margin_16"
              android:layout_marginRight="@dimen/margin_16"
              android:layout_marginStart="@dimen/margin_16"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_message_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_16"
            android:src="@drawable/game_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_message_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="迷兔"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_12"/>

                <TextView
                    android:id="@+id/tv_my_message_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2018-11-03 11:00"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_12"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6"
                android:lineSpacingExtra="@dimen/margin_4"
                android:text="#万圣节# 今晚去哪里鬼混，来迷兔参加PK大赛赢大奖，万圣节好礼等你拿！参加活动>>"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/fonts_14"/>
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/include_line"/>
</LinearLayout>