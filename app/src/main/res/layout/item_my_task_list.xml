<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_color"
        android:textSize="15sp"
        tools:text="下载一个平台的游戏" />

    <TextView
        android:id="@+id/tv_task_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_task_exp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="+10"
        android:textColor="@color/my_task_exp_blue"
        android:textSize="@dimen/fonts_12" />

    <TextView
        android:id="@+id/tv_task_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_task_exp"
        android:drawableLeft="@drawable/ic_task_diamond"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="+10"
        android:textColor="@color/purple_diamond"
        android:textSize="@dimen/fonts_12" />

    <TextView
        android:id="@+id/btn_task_action"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_fillet_gifts_btn"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/second_color"
        android:textSize="@dimen/fonts_13" />

    <include
        android:id="@+id/line"
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>