<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/white_color"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_select_take_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/text_take_photo"
        android:textColor="@color/normal_color"
        android:textSize="@dimen/fonts_18"/>

    <include layout="@layout/include_line"/>

    <TextView
        android:id="@+id/tv_select_take_album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/text_from_album"
        android:textColor="@color/normal_color"
        android:textSize="@dimen/fonts_18"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ece3e4"/>

    <TextView
        android:id="@+id/tv_select_take_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/text_cancel"
        android:textColor="@color/normal_color"
        android:textSize="@dimen/fonts_18"/>
</LinearLayout>