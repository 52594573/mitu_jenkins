<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/include_title_bar" />

    <TextView
        android:id="@+id/tv_invite_desc"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/bg_tv_share_invite_radius_8"
        android:padding="@dimen/padding_14"
        android:text="我在迷兔的悠游天下部落玩游戏，快来加入我们吧，分享以下链接 https://www.meetoto.com/" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_invite_share"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_btn_main_color_radius_5"
            android:gravity="center"
            android:text="@string/text_invite_friends"
            android:textColor="@color/main_black"
            android:textSize="@dimen/fonts_15" />
    </LinearLayout>
</LinearLayout>