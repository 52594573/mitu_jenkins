<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_development_top"
        android:layout_width="4dp"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginStart="@dimen/margin_4"
        android:background="@color/right_refuse_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/developing_point" />

        <TextView
            android:id="@+id/tv_development_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginStart="@dimen/margin_6"
            android:text="2018.08.20"
            android:textColor="@color/yellow_color"
            android:textSize="@dimen/fonts_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginStart="@dimen/margin_4"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_development_bottom"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/right_refuse_color" />

        <TextView
            android:id="@+id/tv_development_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="首次登上平台部落第一名,首次登上平台部落第一名, 首次登上平台部落第一名." />
    </LinearLayout>

</LinearLayout>