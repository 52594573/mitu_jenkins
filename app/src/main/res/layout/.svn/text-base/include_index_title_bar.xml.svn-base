<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_index_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_16"
            android:paddingLeft="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16"
            android:paddingStart="@dimen/padding_16"
            android:src="@drawable/search"/>
    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tb_index_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:tabIndicatorColor="@color/main_black"
        app:tabSelectedTextColor="@color/main_black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center_vertical|end">

        <ImageView
            android:id="@+id/ll_index_download_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_8"
            android:paddingLeft="@dimen/padding_16"
            android:paddingRight="@dimen/padding_8"
            android:paddingStart="@dimen/padding_16"
            android:src="@drawable/all_download"/>

        <ImageView
            android:id="@+id/ll_index_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_16"
            android:paddingLeft="@dimen/padding_8"
            android:paddingRight="@dimen/padding_16"
            android:paddingStart="@dimen/padding_8"
            android:src="@drawable/message"/>
    </LinearLayout>
</LinearLayout>