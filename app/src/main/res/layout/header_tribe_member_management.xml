<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_info_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_added_records"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_my_purse_next"
            android:gravity="center_vertical"
            android:text="@string/text_added_records"
            android:textColor="@color/second_color"
            android:textSize="15sp" />

        <include layout="@layout/include_line" />

        <TextView
            android:id="@+id/tv_black_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_my_purse_next"
            android:gravity="center_vertical"
            android:text="@string/text_black_list"
            android:textColor="@color/second_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/text_tribe_manager"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_15" />

        <cn.droidlover.xrecyclerview.XRecyclerView
            android:id="@+id/xlv_tribe_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="11dp"
        android:paddingTop="25dp"
        android:text="@string/text_tribe_member"
        android:textColor="@color/second_color"
        android:textSize="@dimen/fonts_15" />
</LinearLayout>