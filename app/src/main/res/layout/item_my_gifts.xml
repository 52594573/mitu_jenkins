<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/search_history_keyword_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_game_gift_pic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/game_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_toEndOf="@id/iv_game_gift_pic"
                android:layout_toLeftOf="@+id/tv_game_gift_status"
                android:layout_toRightOf="@id/iv_game_gift_pic"
                android:layout_toStartOf="@+id/tv_game_gift_status"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_game_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="蒸汽拳皇蒸汽拳皇蒸汽拳皇蒸汽拳皇蒸"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/fonts_16" />

                <TextView
                    android:id="@+id/tv_game_gift_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="新人皮肤礼包"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_game_gift_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="已领取"
                android:textColor="@color/red_color"
                android:textSize="@dimen/fonts_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_gift_code_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_gifts_code"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fonts_14" />

                    <TextView
                        android:id="@+id/tv_game_gift_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginStart="@dimen/margin_6"
                        android:text="SDE321FR1243"
                        android:textColor="@color/second_color"
                        android:textSize="@dimen/fonts_14" />

                    <TextView
                        android:id="@+id/tv_game_gift_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginStart="@dimen/margin_6"
                        android:text="@string/text_copy"
                        android:textColor="@color/yellow_color"
                        android:textSize="@dimen/fonts_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_14"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_gift_validity_period_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_validity_period"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fonts_14" />

                    <TextView
                        android:id="@+id/tv_game_gift_validity_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginStart="@dimen/margin_6"
                        android:text="2018.5.6-2018.9.14"
                        android:textColor="@color/second_color"
                        android:textSize="@dimen/fonts_14" />
                </LinearLayout>
            </LinearLayout>

            <com.playingjoy.fanrabbit.widget.ProgressTextView
                android:id="@+id/ptv_game_gift_download"
                android:layout_width="71dp"
                android:layout_height="26dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/text_start_download"
                android:textColor="@color/main_black"
                android:textSize="@dimen/fonts_11" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>