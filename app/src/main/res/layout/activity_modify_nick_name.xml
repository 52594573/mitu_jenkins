<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/user_info_bg_color"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white_color"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/padding_6"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_6"
        android:paddingStart="@dimen/padding_16">

        <EditText
            android:id="@+id/et_nickname_str"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/text_input_nickname"
            android:textColor="@color/normal_color"
            android:textSize="@dimen/fonts_16"/>

        <ImageView
            android:id="@+id/iv_nickname_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:src="@drawable/deleteicon"/>
    </LinearLayout>
</LinearLayout>