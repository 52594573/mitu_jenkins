<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_26"
        android:gravity="center"
        android:text="是否要删除搜索历史"
        android:textColor="@color/main_black"
        android:textSize="@dimen/fonts_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_left_btn"
            android:text="@string/text_cancel"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_16" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_right_btn"
            android:text="@string/text_delete"
            android:textColor="@color/second_color"
            android:textSize="@dimen/fonts_16" />
    </LinearLayout>
</LinearLayout>