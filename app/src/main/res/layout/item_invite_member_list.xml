<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_marginTop="@dimen/margin_12"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/padding_16"
    android:paddingLeft="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16"
    android:paddingStart="@dimen/padding_16">


    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_member_list_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp_pic" />

        <ImageView
            android:id="@+id/iv_member_list_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_tribe_lv_2" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_marginStart="@dimen/margin_14"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_member_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帅哥"
                android:textColor="@color/main_black"
                android:textSize="@dimen/fonts_15" />

            <TextView
                android:id="@+id/tv_member_list_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:background="@drawable/level_bg"
                android:paddingLeft="@dimen/padding_4"
                android:paddingRight="@dimen/padding_4"
                android:text="LV3"
                android:textColor="@color/main_color"
                android:textSize="@dimen/fonts_10" />

            <TextView
                android:id="@+id/tv_member_list_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:background="@drawable/bg_btn_red_stroke_radius_10"
                android:paddingBottom="@dimen/padding_2"
                android:paddingLeft="@dimen/padding_4"
                android:paddingRight="@dimen/padding_4"
                android:paddingTop="@dimen/padding_2"
                android:text="会长"
                android:textColor="@color/red_color"
                android:textSize="@dimen/fonts_10" />

            <ImageView
                android:id="@+id/iv_member_list_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:src="@drawable/is_man" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_member_list_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:text="我是为了公会的会长,欢迎大家加入我..."
            android:textColor="@color/hint_color"
            android:textSize="@dimen/fonts_13" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_member_list_check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_rect_check_box" />
</LinearLayout>