<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <RelativeLayout
                android:id="@+id/rl_tribe_info"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:background="@color/main_color">

                <include layout="@layout/include_tribe_titlebar" />

                <LinearLayout
                    android:id="@+id/ll_mine_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_40"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tribe_pic"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="@dimen/margin_10"
                        android:src="@drawable/game_icon" />

                    <TextView
                        android:id="@+id/tv_tribe_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:drawableLeft="@drawable/tribe_detail_id"
                        android:drawablePadding="@dimen/padding_6"
                        android:drawableStart="@drawable/tribe_detail_id"
                        android:text="912382" />

                    <RatingBar
                        android:id="@+id/rb_tribe_rating"
                        style="@style/SearchRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/tv_tribe_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_18"
                        android:text="无所畏惧 勇往直前"
                        android:textColor="@color/tribe_desc_color"
                        android:textSize="@dimen/fonts_13" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_tribe_signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ll_tribe_title_bar"
                    android:layout_marginTop="@dimen/margin_26"
                    android:src="@drawable/is_sign_in" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_marginLeft="@dimen/margin_32"
                android:layout_marginRight="@dimen/margin_32"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_6"
                android:background="@drawable/tribe_number_bg"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_members"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fonts_12" />

                    <TextView
                        android:id="@+id/tv_tribe_member_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:gravity="center"
                        android:text="16564"
                        android:textColor="@color/tribe_num_color"
                        android:textSize="@dimen/fonts_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_contribution"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fonts_12" />

                    <TextView
                        android:id="@+id/tv_tribe_contribution_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:gravity="center"
                        android:text="16564"
                        android:textColor="@color/tribe_num_color"
                        android:textSize="@dimen/fonts_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_active"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fonts_12" />

                    <TextView
                        android:id="@+id/tv_tribe_active_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:gravity="center"
                        android:text="16564"
                        android:textColor="@color/tribe_num_color"
                        android:textSize="@dimen/fonts_15" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tribe_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_22"
                android:text="简介：你不是一个人在战斗，我们比肩风雨共同行，游戏中不 再孤单无助 ， 我们一起共进退。相亲相爱一家人，共筑美好的 碎梦魂。"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/fonts_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/margin_24"
                android:background="@drawable/bg_btn_main_color_stroke_radius_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/announcement" />

                <TextView
                    android:id="@+id/tv_tribe_announcement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_weight="1"
                    android:text="今晚8点一起开黑"
                    android:textColor="@color/normal_color"
                    android:textSize="@dimen/fonts_15" />

                <TextView
                    android:id="@+id/tv_tribe_announcement_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/tribe_more"
                    android:drawablePadding="@dimen/padding_4"
                    android:drawableRight="@drawable/tribe_more"
                    android:text="查看更多"
                    android:textColor="@color/border_color"
                    android:textSize="@dimen/fonts_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_26">

                <TextView
                    android:id="@+id/tv_tribe_honor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_8"
                    android:drawableTop="@drawable/tribe_honor"
                    android:gravity="center"
                    android:text="@string/text_honor_wall"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_12" />

                <TextView
                    android:id="@+id/tv_tribe_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_8"
                    android:drawableTop="@drawable/tribe_shop"
                    android:gravity="center"
                    android:text="@string/text_tribe_shop"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_12" />

                <TextView
                    android:id="@+id/tv_tribe_task"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_8"
                    android:drawableTop="@drawable/tribe_task"
                    android:gravity="center"
                    android:text="@string/text_tribal_task"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/fonts_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tribe_member"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/tribe_title_yellow_bar"
                    android:drawablePadding="@dimen/padding_10"
                    android:drawableStart="@drawable/tribe_title_yellow_bar"
                    android:text="公会成员（883）"
                    android:textColor="@color/normal_color"
                    android:textSize="@dimen/fonts_16" />

                <TextView
                    android:id="@+id/tv_tribe_member_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/tribe_more"
                    android:drawablePadding="@dimen/padding_4"
                    android:drawableRight="@drawable/tribe_more"
                    android:gravity="end"
                    android:text="@string/text_more" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/rlv_tribe_member_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_tribe_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:drawableLeft="@drawable/tribe_title_yellow_bar"
                android:drawablePadding="@dimen/padding_10"
                android:drawableStart="@drawable/tribe_title_yellow_bar"
                android:text="我们的游戏（10）"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/fonts_16" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/rlv_tribe_games_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tribe_legion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/tribe_title_yellow_bar"
                    android:drawablePadding="@dimen/padding_10"
                    android:drawableStart="@drawable/tribe_title_yellow_bar"
                    android:text="游戏军团（5）"
                    android:textColor="@color/normal_color"
                    android:textSize="@dimen/fonts_16" />

                <TextView
                    android:id="@+id/tv_tribe_legion_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/tribe_more"
                    android:drawablePadding="@dimen/padding_4"
                    android:drawableRight="@drawable/tribe_more"
                    android:gravity="end"
                    android:text="@string/text_more" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/rlv_tribe_legion_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:drawableLeft="@drawable/tribe_title_yellow_bar"
                android:drawablePadding="@dimen/padding_10"
                android:drawableStart="@drawable/tribe_title_yellow_bar"
                android:text="@string/text_development"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/fonts_16" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/rlv_tribe_development_list"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>